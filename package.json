{
    "name": "zomato-ecosystem-monorepo",
    "private": true,
    "workspaces": [
        "apps/*",
        "packages/*",
        "backend/*"
    ],
    "scripts": {
        "start": "lerna run start --stream --parallel",
        "build": "lerna run build --stream",
        "dev": "lerna run dev --stream --parallel",
        "test": "lerna run test --stream",
        "lint": "lerna run lint --stream",
        "type-check": "lerna run type-check --stream --parallel",
        "clean:all": "find . -name 'node_modules' -type d -prune -exec rm -rf '{}' + && find . -name 'package-lock.json' -delete && find . -name '.expo' -type d -prune -exec rm -rf '{}' +",
        "install:all": "npm install && lerna bootstrap"
    },
    "overrides": {
        "react": "19.1.0",
        "react-dom": "19.1.0",
        "react-native": "0.81.5",
        "@types/react": "19.1.0",
        "@types/react-dom": "19.1.0"
    },
    "devDependencies": {
        "@types/jsonwebtoken": "^9.0.10",
        "@types/luxon": "^3.7.1",
        "@types/ms": "^2.1.0",
        "@types/react": "19.1.0",
        "@types/react-dom": "19.1.0",
        "eslint": "^8.0.0",
        "lerna": "^8.1.9",
        "prettier": "^3.5.2",
        "typescript": "^5.8.3"
    }
}