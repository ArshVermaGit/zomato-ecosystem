# Production environment variables
# Copy this file to .env and fill in your values

# Database
DATABASE_URL=postgresql://zomato:your_secure_password_here@localhost:5432/zomato_db
DB_USER=zomato
DB_PASSWORD=your_secure_password_here
DB_NAME=zomato_db

# JWT
JWT_SECRET=your_jwt_secret_here

# API URL for frontend apps
API_URL=https://api.yourdomain.com

# AWS / S3 (For restaurant images and documents)
AWS_ACCESS_KEY_ID=your_aws_key
AWS_SECRET_ACCESS_KEY=your_aws_secret
AWS_REGION=ap-south-1
AWS_S3_BUCKET=zomato-assets

# Algolia (For search and discovery)
ALGOLIA_APP_ID=your_algolia_app_id
ALGOLIA_API_KEY=your_algolia_api_key
ALGOLIA_INDEX_NAME=restaurants

# Firebase (For push notifications)
FIREBASE_PROJECT_ID=your_firebase_project_id
FIREBASE_PRIVATE_KEY=your_firebase_private_key
FIREBASE_CLIENT_EMAIL=your_firebase_client_email

# Razorpay (For payments)
RAZORPAY_KEY_ID=your_razorpay_key
RAZORPAY_KEY_SECRET=your_razorpay_secret

# SendGrid (For emails)
SENDGRID_API_KEY=your_sendgrid_key

# Twilio (For OTP/SMS)
TWILIO_ACCOUNT_SID=your_twilio_sid
TWILIO_AUTH_TOKEN=your_twilio_token
TWILIO_PHONE_NUMBER=your_twilio_phone

# Sentry (Error tracking)
SENTRY_DSN=https://xxx@sentry.io/xxx

# Redis (For Bull queues and Rate limiting)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=your_redis_password
